{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}/main.cpp",
                "${fileDirname}/Sort.cpp",
                "-o",
                "${fileDirname}/main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile main.cpp and Sort.cpp into main.exe"
        }
    ]
}
